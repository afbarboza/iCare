<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.icare.icare.OldPersonDashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/lv_old_person_drougs"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_tst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add"
                android:onClick="addAlarm"/>

            <Button
                android:id="@+id/btnRecordAudioReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="microphone"
                android:onClick="handleAudioRecord"/>
        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
